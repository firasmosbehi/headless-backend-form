{
  "name": "headless-backend-form",
  "version": "0.1.0",
  "private": true,
  "description": "Headless form backend API for receiving and managing form submissions.",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:migrate": "node src/db/migrate.js",
    "test": "NODE_ENV=test jest --runInBand --testPathIgnorePatterns=/tests/integration/",
    "test:integration": "RUN_INTEGRATION=1 NODE_ENV=test jest --runInBand --testPathPattern=tests/integration/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
