NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/headless_form
TRUST_PROXY=false

# Comma-separated list of allowed dashboard origins for /api/* routes
ALLOWED_DASHBOARD_ORIGINS=http://localhost:5173,http://localhost:3001

# Public submission rate limits
PUBLIC_RATE_LIMIT_WINDOW_MS=60000
PUBLIC_RATE_LIMIT_MAX=20
PUBLIC_BODY_LIMIT=100kb

# Optional spam protection
RECAPTCHA_SECRET=

# Optional email notifications (Resend API compatible)
RESEND_API_KEY=
EMAIL_FROM=no-reply@example.com
